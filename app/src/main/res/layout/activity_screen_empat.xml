<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenEmpat">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen 4"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText"
        android:textSize="18sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK TO SCREEN 3"
        android:id="@+id/button_back_to_screen_tiga"
        android:layout_centerInParent="true"
        tools:ignore="HardcodedText" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan pekerjaan"
        android:layout_marginHorizontal="10dp"
        android:inputType="text"
        android:id="@+id/challenge_inputan_pekerjaan"
        android:importantForAutofill="no"
        tools:ignore="HardcodedText"
        android:layout_above="@+id/button_back_to_screen_tiga"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan alamat"
        android:layout_marginHorizontal="10dp"
        android:inputType="text"
        android:id="@+id/challenge_inputan_alamat"
        android:importantForAutofill="no"
        tools:ignore="HardcodedText"
        android:layout_above="@+id/challenge_inputan_pekerjaan"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan usia"
        android:layout_marginHorizontal="10dp"
        android:inputType="text"
        android:id="@+id/challenge_inputan_usia"
        android:importantForAutofill="no"
        tools:ignore="HardcodedText"
        android:layout_above="@+id/challenge_inputan_alamat"/>
</RelativeLayout>